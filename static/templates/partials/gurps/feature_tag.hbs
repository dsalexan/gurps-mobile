
{{#if (isString this)}}
  <div class="tag">{{this}}</div>
{{else}}
  <div class="tag {{join classes}} {{join types}}">
  {{#each children}}
    {{!-- {{#if @index}}<div class="divider"><div></div></div>{{/if}} --}}
    {{#if (or (not (isNilOrEmpty icon)) (not (isNilOrEmpty label)))}}
      <a class="label {{join classes}}">
        {{#if icon}}{{gurpsIcon icon}}{{/if}}
        {{#unless (isNilOrEmpty label)}}<span>{{{label}}}</span>{{/unless}}
      </a>
    {{/if}}
  {{/each}}
  </div>
{{/if}}